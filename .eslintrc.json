{
    "env": {
        "browser": false,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "semi": [
            "error", "always" // Para obrigar o uso de dois pontos
        ],
        "quotes": [
            "error", "double" // Para impedir o uso de strings utilizando aspas duplas
        ]
    }
}
